<main class="site-main-container">
  <header class="user-header">
    <img src="{{avatar}}" alt="">
    <h2><span>ðŸ‘‹Hello</span> <br>{{name}}</h2>
  </header>
  <header class="progress-header">
    <div class="progressbar">
      <span>1</span>
      <span class="active">2</span>
      <span>3</span>
    </div>
    <h2>Choose a playlist</h2>
  </header>
  <section class="playlists">
    {{#each playlists}}
    <a href="/song?token_type={{../token_type}}&access_token={{../access_token}}&expire_date={{../expire_date}}&refresh_token={{../refresh_token}}&playlist_id={{this.id}}&user={{../name}}&avatar="
      class="playlist_a">
      <div class="playlist">
        <img src="{{this.cover.url}}" alt="">
        <h3>{{this.name}}</h3>
        <span class="tracks">{{this.tracks}}</span>

      </div>
    </a>
    {{/each}}
    <script>
      const playlist = document.querySelectorAll('.playlist_a');
      playlist.forEach(el => {
        el.href += encodeURIComponent("{{avatar}}");
      })

    </script>
  </section>
</main>